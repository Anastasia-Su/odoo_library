<?xml version="1.0" encoding="UTF-8"?>
    <odoo>
    <record id="view_library_partner_list" model="ir.ui.view">
        <field name="name">library.partner.list</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list string="Користувачі бібліотеки">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="category_id" widget="many2many_tags"/> <!-- показує теги -->
            </list>
        </field>
    </record>

    <record id="view_library_partner_form" model="ir.ui.view">
        <field name="name">library.partner.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Користувач бібліотеки">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="street"/>
                        <field name="city"/>
                        <field name="country_id"/>
                        <field name="category_id" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_library_partner" model="ir.actions.act_window">
        <field name="name">Користувачі бібліотеки</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('category_id.name', '=', 'Test Users')]</field> <!-- тільки твої тестові -->
        <field name="context" eval="{'default_category_id': [(6, 0, [ref('library_management.tag_test_users')])]}"/>
    </record>

    <menuitem id="menu_library_partners"
            name="Users"
            parent="menu_library_root"
            action="action_library_partner"
            sequence="20"/>
</odoo>