<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_library_rent_wizard_form" model="ir.ui.view">
        <field name="name">library.rent.wizard.form</field>
        <field name="model">library.rent.wizard</field>
        <field name="arch" type="xml">
            <form string="Видати книгу">
                <group>
                    <field name="partner_id"/>
                    <field name="book_id" 
                       readonly="1"
                       nolabel="1"
                       invisible="context.get('default_book_id')"/>
                </group>
                <footer>
                    <button string="Видати"
                            type="object"
                            name="action_rent_book"
                            class="btn-primary oe_highlight"/>
                    <button string="Скасувати"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_rent_wizard" model="ir.actions.act_window">
        <field name="name">Видати книгу</field>
        <field name="res_model">library.rent.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_library_rent_wizard_form"/>
        <field name="context">{'default_book_id': active_id}</field>
    </record>
</odoo>
