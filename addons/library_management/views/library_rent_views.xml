<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List view -->
    <record id="view_library_rent_list" model="ir.ui.view">
        <field name="name">library.rent.list</field>
        <field name="model">library.rent</field>
        <field name="arch" type="xml">
            <list>
                <field name="book_id"/>
                <field name="partner_id"/>
                <field name="rent_date"/>
                <field name="return_date"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_library_rent_form" model="ir.ui.view">
        <field name="name">library.rent.form</field>
        <field name="model">library.rent</field>
        <field name="arch" type="xml">
            <form string="Оренда книги">
                <!-- Header with action button -->
                <header>
                    <!-- "Повернути книгу" button – visible only if not yet returned -->
                    <button name="action_return_book"
                            string="Повернути книгу"
                            type="object"
                            class="oe_highlight btn-primary"
                            invisible="return_date"/>  <!-- hides if return_date is set -->

                    <!-- Optional: status indicator (smart button style, but simple) -->
                    <field name="return_date" widget="boolean_toggle" invisible="1"/> <!-- hidden helper if needed -->
                </header>
                <sheet>
                    <group>
                        <field name="book_id"/>
                        <field name="partner_id"/>
                        <field name="rent_date"/>
                        <field name="return_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_rent" model="ir.actions.act_window">
        <field name="name">Rents</field>
        <field name="res_model">library.rent</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
