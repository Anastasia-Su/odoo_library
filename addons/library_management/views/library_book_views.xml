<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_library_book_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="author"/>
                <field name="published_date"/>
                <field name="is_available"/>
            </list>
        </field>
    </record>

    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <header>
                    <button name="%(action_rent_wizard)d"
                            string="Видати книгу"
                            type="action"
                            class="oe_highlight btn-primary"
                            invisible="not is_available"/>
                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="published_date"/>
                        <field name="is_available" readonly="1"/>
                        <field name="current_renter_id" 
                           readonly="1" 
                           placeholder="Немає активного орендаря"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

